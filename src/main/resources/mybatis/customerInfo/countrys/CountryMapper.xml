<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.com.atnc.project.customerInfo.countrys.mapper.CountryMapper">

    <resultMap type="Country" id="CountryResult">
        <id     property="countryId"       column="country_id"/>
        <result property="countryCN"       column="countryCN"/>
        <result property="countryEN"    column="countryEN"/>
        <result property="countryCode"     column="country_code"/>
        <result property="aviationCode"        column="aviation_code"/>
        <result property="continent"    column="continent"/>
    </resultMap>


    <sql id="selectCountryVo">
        select  country_id,countryCN,countryEN,country_code,aviation_code,continent
		from cus_country
    </sql>

    <select id="selectCountryList" parameterType="Country" resultMap="CountryResult">
        <include refid="selectCountryVo"/>
        <where>
            <if test="countryName != null and countryName != ''">
                AND countryCN like concat('%', #{countryName}, '%') or countryEN like concat('%', #{countryName}, '%')
            </if>
            <if test="countryCode != null and countryCode != ''">
                AND countryCode  like concat('%', #{countryCode}, '%')
            </if>
            <if test="continent != null and continent != ''">
                AND continent  like concat('%', #{continent}, '%')
            </if>
        </where>
    </select>

    <select id="selectCountryByCountryName" parameterType="String" resultMap="CountryResult">
        <include refid="selectCountryVo"/>
        where countryCN like concat('%', #{countryName}, '%') or countryEN like concat('%', #{countryName}, '%')
    </select>


    <insert id="insertNotice" parameterType="Notice">
        insert into sys_notice (
        <if test="noticeTitle != null and noticeTitle != '' ">notice_title, </if>
        <if test="noticeType != null and noticeType != '' ">notice_type, </if>
        <if test="noticeContent != null and noticeContent != '' ">notice_content, </if>
        <if test="status != null and status != '' ">status, </if>
        <if test="remark != null and remark != ''">remark,</if>
        <if test="createBy != null and createBy != ''">create_by,</if>
        create_time
        )values(
        <if test="noticeTitle != null and noticeTitle != ''">#{noticeTitle}, </if>
        <if test="noticeType != null and noticeType != ''">#{noticeType}, </if>
        <if test="noticeContent != null and noticeContent != ''">#{noticeContent}, </if>
        <if test="status != null and status != ''">#{status}, </if>
        <if test="remark != null and remark != ''">#{remark},</if>
        <if test="createBy != null and createBy != ''">#{createBy},</if>
        sysdate()
        )
    </insert>
</mapper>